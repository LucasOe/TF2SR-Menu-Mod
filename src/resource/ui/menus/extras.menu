			ControlName				RuiButton
			InheritProperties		SwitchButton
			style					DialogListButton
			pin_to_sibling			ImgMiscSubheaderBackground
			pin_corner_to_sibling	TOP_LEFT
			pin_to_sibling_corner	BOTTOM_LEFT
			ConVar					"sv_cheats"
			list
			{
				"#SETTING_OFF"	0
				"#SETTING_ON"	1
			}
			xpos					-22
			ypos					1
			navUp					SwitchShowPos
			navDown					SwitchEnableMP
		}

