			pin_to_sibling_corner	BOTTOM_LEFT
			ypos					1
			navUp					BtnResetHelmets
			navDown					BtnCKassist
		}

		BtnCKassist
		{
			ControlName				RuiButton
			InheritProperties		WideButton
			pin_to_sibling			BtnUnlockLevels
			pin_corner_to_sibling	TOP_LEFT
			pin_to_sibling_corner	BOTTOM_LEFT
